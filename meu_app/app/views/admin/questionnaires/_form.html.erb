<%= form_with model: [:admin, @questionnaire], local: true do |form| %>
  <% if @questionnaire.errors.any? %>
    <div class="alert alert-danger">
      <h4>Erros:</h4>
      <ul>
        <% @questionnaire.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Título", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Descrição", class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
  <%= link_to "Cancelar", admin_questionnaires_path, class: "btn btn-secondary ms-2" %>
<% end %>
