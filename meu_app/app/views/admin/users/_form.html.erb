<%# app/views/admin/users/_form.html.erb %>

<%# Breadcrumb simples %>
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Dashboard", admin_root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Usuários", admin_users_path %></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= @admin_user.new_record? ? "Novo Usuário" : "Editar Usuário" %>
    </li>
  </ol>
</nav>

<%= form_with(model: [:admin, @admin_user], local: true) do |form| %>
  <% if @admin_user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@admin_user.errors.count, "erro") %> proibiu este usuário de ser salvo:</h4>
      <ul>
        <% @admin_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Nome -->
  <div class="mb-3">
    <%= form.label :name, "Nome", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", autofocus: true %>
  </div>

  <!-- Email -->
  <div class="mb-3">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <!-- Role / Papel -->
  <div class="mb-3">
    <%= form.label :role_id, "Papel", class: "form-label" %>
    <%= form.collection_select :role_id, Role.all, :id, :title, { prompt: "Selecione um papel" }, { class: "form-select" } %>
  </div>

  <!-- Senha e confirmação (opcional no edit) -->
  <div class="mb-3">
    <%= form.label :password, "Senha", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: (@admin_user.new_record? ? "" : "Deixe em branco para manter a senha") %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, "Confirmação de Senha", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: (@admin_user.new_record? ? "" : "Deixe em branco para manter a senha") %>
  </div>

  <!-- Botões -->
  <div class="actions">
    <%= form.submit @admin_user.new_record? ? "Criar Usuário" : "Atualizar Usuário", class: "btn btn-primary" %>
    <%= link_to "Cancelar", admin_users_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
