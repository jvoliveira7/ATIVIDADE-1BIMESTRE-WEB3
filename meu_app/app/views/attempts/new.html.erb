<div class="w-full max-w-2xl mx-auto">
  <h1 class="font-bold text-4xl mb-2"><%= @questionnaire.title %></h1>
  <p class="text-gray-700 mb-6"><%= @questionnaire.description %></p>

  <%= form_with(model: [@questionnaire, @attempt], url: questionnaire_attempts_path(@questionnaire)) do |form| %>
    
    <% @questionnaire.questions.each_with_index do |question, index| %>
      <div class="mb-8 p-6 border rounded-lg shadow-md bg-white">
        <p class="font-semibold text-lg mb-4"><%= index + 1 %>. <%= question.text %></p>
        
        <div class="space-y-3">
          <% question.options.each do |option| %>
            <label class="flex items-center p-3 border rounded-md hover:bg-gray-50 cursor-pointer">
       
              <%= radio_button_tag "attempt[answers][#{question.id}]", option.id, false, class: "h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500" %>
              <span class="ml-3 text-gray-800"><%= option.text %></span>
            </label>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-8">
      <%= form.submit "Finalizar e Ver Resultado", class: "w-full rounded-lg py-3 px-5 bg-green-600 text-white font-bold cursor-pointer hover:bg-green-700" %>
    </div>
  <% end %>
</div>