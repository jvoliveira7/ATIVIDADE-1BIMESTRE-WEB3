<div id="<%= dom_id option %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Text:</strong>
    <%= option.text %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Correct:</strong>
    <%= option.correct? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Question:</strong>
    <%= option.question_id %>
  </div>
</div>
